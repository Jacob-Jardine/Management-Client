@model Management_Web_Application.Models.StaffReadViewModel;

<div class="table-responsive-xl">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Staff Id</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Full Name</th>
                <th scope="col">Email Address</th>
                <th scope="col">Update Staff Account</th>
                <th scope="col">Delete Staff Account</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.StaffID</td>
                <td>@Model.StaffFirstName</td>
                <td>@Model.StaffLastName</td>
                <td>@Model.StaffFullName</td>
                <td>@Model.StaffEmailAddress</td>
                <td><a asp-action="UpdateStaff" asp-route-id="@Model.StaffID" class="btn btn-warning">Update Staff Account</a></td>
                <td><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Modal" data-id="@Model.StaffFirstName">Remove Staff Account</button></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>


<div class="modal fade open-Modal" data-id="test" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" onclick="test()" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Staff Account</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to remove @Model.StaffFirstName
            </div>
            <div class="modal-footer">
                <a asp-action="DeleteStaff" asp-route-id="@Model.StaffID" class="btn btn-danger">Yes Delete</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="GetAllStaff" class="btn btn-primary btn-sm">Back to all staff</a>
</div>

