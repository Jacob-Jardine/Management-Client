@{
    ViewData["Title"] = "View";
}

@*
    Add or remove staff account
    Select Which staff have authorisation to perform actions
    apporove or deny purchase requests
*@

<h1>Management Portal</h1>

<hr />
<form method="post">
    <div class="container">
        <div class="row text-center">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Staff CRUD</h5>
                        <button asp-action="GetAllStaff" class="btn btn-success btn-lg">Go!</button>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Staff Permissions</h5>
                        <button asp-action="GetAllStaff" class="btn btn-success btn-lg">Go!</button>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Purchase Requests</h5>
                        <button asp-action="GetAllStaff" class="btn btn-success btn-lg">Go!</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
