@model Management_Web_Application.Models.StaffCreateViewModel;

@Html.AntiForgeryToken()
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group" row>
        <div class="col-6">

            @Html.DisplayNameFor(m => m.StaffFirstName)
            <br />
            <span asp-validation-for="StaffFirstName" class="text-danger"></span>
            @Html.TextBoxFor(m => m.StaffFirstName, new { @class = "form-control", @placeholder = "First Name" })

            @Html.DisplayNameFor(m => m.StaffLastName)
            <br />
            <span asp-validation-for="StaffLastName" class="text-danger"></span>
            @Html.TextBoxFor(m => m.StaffLastName, new { @class = "form-control", @placeholder = "Last Name" })

            @Html.DisplayNameFor(m => m.StaffEmailAddress)
            <br />
            <span asp-validation-for="StaffEmailAddress" class="text-danger"></span>
            @Html.TextBoxFor(m => m.StaffEmailAddress, new { @class = "form-control", @placeholder = "Email Address" })

            <br />
            <button type="submit" class="btn btn-success btn-sm">Create Staff Account</button>
        </div>
    </div>
</form>