@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    <h1>Welcome @User.Identity.Name</h1>
    <div class="text-center">
        <form method="post">
            <div class="container">
                <div class="row text-center">
                    <div class="col-sm-6">
                        <h5>Staff CRUD</h5>
                        <a class="btn btn-success btn-lg" onclick="test()" asp-controller="Staff" asp-action="GetAllStaff"><i class="fa fa-check"></i>Go</a>
                    </div>
                    <div class="col-sm-6">
                        <h5 class="card-title">Staff Permissions</h5>
                        <button asp-controller="Purchase" asp-action="Index" class="btn btn-success btn-lg"><i class="fa fa-check"></i>Go</button>
                    </div>
                </div>
            </div>
            @Html.Partial("/Views/Partials/_loadingPartial.cshtml")
        </form>
    </div>
}
else
{
    <div class="text-center">
        <h1>Welcome Management Please Log In!</h1>
    </div>
}