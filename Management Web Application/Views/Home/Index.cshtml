@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>ThAmCo</h1>
    <hr />
    <form method="post">
        <div class="container">
            <div class="row text-center">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Staff</h5>
                            <button asp-controller="Staff" asp-action="GetAllStaff" class="btn btn-success btn-lg">Go!</button>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Staff Permissions</h5>
                            <button asp-controller="Purchase" asp-action="Index" class="btn btn-success btn-lg">Go!</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
